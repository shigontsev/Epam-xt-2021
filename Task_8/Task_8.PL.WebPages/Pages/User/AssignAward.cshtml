@using Task_8.Dependencies
@using Task_8.Entities

@{
    Layout = "~/Pages/Layout/_BasicLayout.cshtml";

    var usersBll = DependencyResolver.Instance.UsersLogic;
    var usersAndAwards = DependencyResolver.Instance.UsersAndAwardsLogic;

    var idUser = Guid.Parse(Request["id"]);
    var user = usersBll.GetUser(idUser);
    var awards = usersAndAwards.GetAwardsNotAvailableByUser(user);

    PageData["Title"] = "Awards for Assign";

    if(!User.IsInRole("admin"))
    {
        Response.Redirect("~/");
    }
}
<h3>Присвоение достижения пользователю : @user.Name</h3>
<a href="~/Pages/User/Details?id=@Request["id"]" class="btn btn-primary">Back</a>

@if (!IsPost)
{
    if (awards.Count > 0)
    {
        <form method="post">
            <fieldset class="row mb-3">
                <legend class="col-form-label col-sm-2 pt-0">Awards</legend>
                <div class="col-sm-10">
                    @{
                        int index = 0;
                        foreach (var item in awards)
                        {
                            index++;
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios@index" value="@item.Id" checked>
                                <label class="form-check-label" for="gridRadios@index">
                                    @item.Title
                                </label>
                            </div>
                        }
                    }
                </div>
            </fieldset>
            <button type="submit" class="btn btn-primary">Turn</button>
        </form>
    }
    else
    {
        <h5>
            Все достижения присвоенны
        </h5>
    }
}
else
{
    try
    {
        var idAward = Request["gridRadios"];
        var result = usersAndAwards.AssignAwardToUser(idAward: Guid.Parse(idAward), idUser: idUser);
        if (result)
        {
            <div class="alert alert-success" role="alert">
                Достижение успешно присвоенно пользователю!!!
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                Достижение не присвоенно пользователю!!!
            </div>
        }
    }
    catch (Exception ex)
    {
        <div class="alert alert-danger" role="alert">
            Достижение не присвоенно пользователю!!!
        </div>
    }
}