@using Task_8.Dependencies

@{
    Layout = "~/Pages/Layout/_BasicLayout.cshtml";

    var usersBll = DependencyResolver.Instance.UsersLogic;

    var users = usersBll.GetAllUser();

    PageData["Title"] = "Users";
}


<h3>
    Hello Users
</h3>

<a class="btn btn-primary" href="~/Pages/AddUser">Add</a>

@{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">DateOfBirth</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 0;
                foreach (var user in users)
                {
                    index++;
                    <tr>
                        <th scope="row">@index</th>
                        <td>@user.Name</td>
                        <td>@user.Age</td>
                        <td>@user.DateOfBirth.ToString("D")</td>
                        <td>
                            <a href="~/Pages/User/Edit?id=@(user.Id)&name=@(user.Name)&date=@(user.DateOfBirth.ToString("d"))">Edit</a> |
                            <a href="~/Pages/User/Details?id=@(user.Id)">Details</a> |
                            <a href="~/Pages/User/Delete?id=@(user.Id)&name=@(user.Name)">Delete</a>                            
                            @*<button id="editBtn" value="@user.Id.ToString()" type="button" class="btn btn-warning">Edit</button>*@
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    @*<script>
        $('#editBtn').click(function () {
            var Id = (this).nodeValue;
        location.href = '/pages/user/edit:{id}';

        })
    </script>*@
    
}

