@using Task_8.Dependencies
@using Task_8.Entities

@{
    Layout = "~/Pages/Layout/_BasicLayout.cshtml";

    var awardsBll = DependencyResolver.Instance.AwardsLogic;

    var usersAndAwards = DependencyResolver.Instance.UsersAndAwardsLogic;

    var award = awardsBll.GetAward(Guid.Parse(Request["id"]));

    var users = usersAndAwards.GetUsersByAward(award);
    PageData["Title"] = "User Deteils";


}


<h3>
    Hello @award.Title
</h3>

<a class="btn btn-primary" href="~/Pages/AddUser">Add</a>

<div class="card" style="width: 300px;">
    <div class="card-body">
        <p class="card-text">
            Title : @award.Title
        </p>
        <h5>
            List Users
        </h5>
        @if (users.Count > 0)
        {

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 0;
                        foreach (var user in users)
                        {
                            index++;
                            <tr>
                                <th scope="row">@index</th>
                                <td>@user.Name</td>
                                <td>
                                    <a href="~/Pages/User/Edit?id=@(user.Id)&name=@(user.Name)&date=@(user.DateOfBirth.ToString("d"))">Edit</a> |
                                    <a href="~/Pages/User/Details?id=@(user.Id)">Details</a> |
                                    <a href="~/Pages/User/Delete?id=@(user.Id)&name=@(user.Name)">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
         } 
         else{
            <p class="card-text">
                List is Clear!!!
            </p>
             }
    </div>
</div>
